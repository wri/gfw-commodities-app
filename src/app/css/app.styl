html, body, .gfw {
  background-color #FFF
  height 100%
  width 100%
  margin 0
  font-family "Helvetica Neue",Helvetica,Arial,sans-serif
}

// Generic Font Classes
.gfw .light-gray-font
	color lightGrayFont

.gfw #app-body:not(.mapView) #stackContainer
	min-height 300px
	//max-height 700px

.gfw #app-body.mapView #stackContainer
	position absolute
	top 120px
	bottom 0
	right 0
	left 0

