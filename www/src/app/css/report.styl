// Useful Functions
border-radius()
	border-radius arguments
	-moz-border-radius arguments
	-webkit-border-radius arguments

baseGray = #e6e6e6
lightGrayFont = #747474
mediumGray = #888
redButton = #F44
orangeButton = rgb(233, 131, 0)
high = #e4132c
medium = #f4820d
low = #78c1dc

// Font Family for the Application
@font-face
	font-family "Arial MT Condensed Bold"
	src url("fonts/ArialMTStd-BoldCond.otf") format("opentype")

@font-face
	font-family "Arial MT Condensed Light"
	src url("fonts/ArialMTStd-LightCond.otf") format("opentype")

html, body 
	// font-family "Arial MT Condensed Light", Arial, Georgia, sans-serif
	font-family 'Fira Sans', 'fira_sans_otregular', Georgia, serif
	background white
	
.gfw #report
	margin 20px auto
	width 960px

.gfw .report-header
	background url("images/header_tree_background.jpg") repeat-x scroll center top transparent
	border 1px solid black
	border-bottom 0px
	min-height 100px

.gfw .report-body
	border 1px solid black
	
.gfw #title
	font-family 'Fira Sans', 'fira_sans_otregular', Georgia, serif
	padding-top 10px
	margin-left 10px
	max-width 750px
	font-weight bold
	font-size 20px
	
.gfw #title.multiples
	font-size 24px

.gfw .total-area
	padding 5px 0 15px
	margin-left 10px

.gfw .total-area-value
	font-family 'Fira Sans', 'fira_sans_otregular', Georgia, serif
	font-weight bold

.gfw .subscribe-alerts
	background-color orangeButton
	padding 5px 8px 3px
	border-radius(5px)
	position absolute
	cursor pointer
	color white
	right 10px
	top 10px

.gfw .print-button
	background url('images/print-icon.png') no-repeat -1px -35px
	position absolute
	cursor pointer
	height 28px
	width 32px
	right 10px
	top 50px

.gfw .print-button.disabled
	background url('images/print-icon.png') no-repeat -1px 0px
	cursor wait

.gfw .loading-wheel
	background url('images/loader.gif')
	background-size 24px
	display inline-block
	height 24px
	width 24px

.gfw .loading-wheel.hidden
	display none


// Report container contents begin here
.gfw .result-container
	margin 20px
	clear both
	
.print-map-container
	position relative
	margin 20px auto
	height 500px
	width 800px

// .print-map-container img
// 	border 1px solid #000
// 	height 850px

.gfw #treeCoverLoss text tspan:nth-child(3)
	display none

.gfw #treeCoverLoss text tspan:nth-child(4)
	min-width 20px

@media print
	.gfw .result-container
	.print-map-container
		page-break-after always

.gfw .report-body .title
	font-family 'Fira Sans', 'fira_sans_otregular', Georgia, serif
	font-weight bold
	font-size 20px

.gfw .report-body .top-panel
	margin 10px

.gfw .report-body .left-panel,
.gfw .report-body .right-panel
	display inline-block
	position relative
	margin 0 10px
	width 430px

.gfw .report-body .loss-chart
	height 400px

// // This Must be important, high charts calculates height off parent container
// // The min-height is set so the output doesnt lose format when there is no data for the charts
// // If the charts are rendered, make sure their height is 400px and not the min-height of loss-chart
// .gfw .report-body .loss-chart .highcharts-container
// 	height 400px !important

.gfw .report-body .right-panel
	float right
	
#suitability-composition-analysis
	height 650px

.gfw .rspo-results-table
.gfw .mill-table-container table
#suitability-settings-table table
	border-collapse collapse
	text-align center
	border-spacing 0
	
.suitability-settings-table-header
	text-align center
	font-size 18px
	margin 10px 0
	
#suitability-settings-table
	font-size 12px

.gfw .rspo-results-table
.gfw .mill-table-container table	
	margin 20px auto
	width 80%
	
.gfw .mill-table-container table
	margin-top 0px
	
#suitability-settings-table tr td:first-child
	min-width 140px
	padding 5px

.gfw .rspo-results-table th,
.gfw .rspo-results-table tr td:first-child
#suitability-settings-table tr td:first-child
	font-family 'Fira Sans', 'fira_sans_otregular', Georgia, serif
	font-weight bold

.gfw .rspo-results-table th
.gfw .rspo-results-table td
#suitability-settings-table th
#suitability-settings-table td
	border 1px solid #adadad
	padding 5px 0 2px

.gfw .rspo-results-table .change-area-unit
	margin-right 10%
	float right

.gfw .composition-analysis-container
	margin 10px 0px

.gfw .active-fires-badge
	border 2px solid #000
	box-sizing border-box
	text-align center
	margin 10px auto
	width 300px

.gfw .active-fires-badge div
	margin 10px 0

.gfw .active-fires-label
	font-family 'Fira Sans', 'fira_sans_otregular', Georgia, serif
	font-weight bold
	color redButton
	font-size 28px
	
.gfw .active-fires-badge.special .active-fires-label span
	font-size 15px

.gfw .active-fires-label div
	line-height 42px
	font-size 42px
	margin 0

.gfw .total-active-fires-label
	font-family 'Fira Sans', 'fira_sans_otregular', Georgia, serif
	font-weight bold
	font-size 16px

.gfw .suitability-container .child-row
	padding-left 15px

.gfw .suitability-container .left-panel
	min-height 400px

.gfw .loader-wheel
	background url('images/loader.gif') no-repeat left
	background-color baseGray
	background-color rgba(230,230,230,0.75)
	padding 6px 5px 0 25px
	border 1px solid #000
	background-size 22px
	display inline-block
	border-radius(5px)
	height 22px

.gfw .loader-wheel.area
	position relative
	width 22px
	padding 0
	top 7px

.gfw .checkbox-container
	padding 5px

.gfw .checkbox-container input
	margin-right 5px
	
.gfw .email-container, .gfw .submit-container, .gfw .message-container
	text-align center
	margin 10px 0

.gfw .email-container input
	border 1px solid baseGray
	border-radius(5px)
	line-height 26px
	padding-left 5px
	font-size 14px
	height 26px
	width 240px
	outline 0

.gfw .submit-container button
	border 1px solid baseGray
	background baseGray
	border-radius(3px)
	padding 5px 3px
	font-size 14px
	cursor pointer
	outline 0

.gfw .submit-container button:hover, .gfw .submit-container button:active
	border 1px solid orangeButton
	background orangeButton
	
.gfw .mill-table-container table
	text-align center
	width 100%
	
.gfw .mill-table-container th
	text-transform uppercase
	width 33%
	
.gfw .mill-table-container th,
.gfw .mill-table-container td
	border 1px solid baseGray
	padding 5px
	
.gfw .mill-table-container tr.data-row td:nth-child(3),
.gfw .mill-table-container tr.data-row td:nth-child(5)
	border-left none
	
.gfw .mill-table-container tr.data-row td:nth-child(2),
.gfw .mill-table-container tr.data-row td:nth-child(4)
	border-right none
	
.gfw .mill-table-container .column-labels,
.gfw .mill-table-container .name
	font-weight bold
	
.gfw .mill-table-container .row-name
	text-align left
	
.gfw .mill-table-container .row-name span:last-child
	margin-left 15px

.gfw .data-row.parent .row-name span:last-child
	margin-left 7px
	
.gfw .data-row.child .row-name span:last-child
	margin-left 25px
	
.gfw .mill-table-container .data-row
	font-weight bold
	
.gfw .mill-table-container .data-row.child
	font-weight normal
	font-size 12px
	
.gfw .mill-header
	background-color baseGray
	border 1px solid baseGray
	margin-top 10px
	height 50px
	
.gfw .mill-title
	line-height 50px
	margin-left 10px
	font-weight bold

.gfw .mill-risk-level
.gfw .mill-rspo-certification
	margin-right 10px
	line-height 25px
	font-weight bold
	font-size 18px
	float right
	clear right
	
.gfw .overall-risk
	text-transform uppercase
	
.gfw .risk-label
	text-transform capitalize

.gfw .large-swatch,
.gfw .small-swatch
	display inline-block
	border-radius(35px)
	position relative
	margin 0 5px
	top 1px
	
.gfw .large-swatch
	height 14px
	width 14px
	
.gfw .small-swatch
	height 10px
	width 10px
	
.gfw .low .overall-risk
	color low

.gfw .medium .overall-risk
	color medium
	
.gfw .high .overall-risk
	color high
	
.gfw .low .large-swatch,
.gfw .low .small-swatch
	background-color low
	
.gfw .medium .large-swatch,
.gfw .medium .small-swatch
	background-color medium
	
.gfw .high .large-swatch,
.gfw .high .small-swatch
	background-color high
	
.gfw .value-toggle
	position absolute
	height 25px
	right 0
	top 5px
	
.gfw .toggle-button-container
	transition all 0.25s ease
	background-color baseGray
	display inline-block
	border-radius(15px)
	position relative
	cursor pointer
	height 100%
	width 40px
	
.gfw .toggle-button-container.active
	background-color #5FA41A
	
.gfw .toggle-button-container.active .toggle-knob
	left 18px
	
.gfw .toggle-knob
	transition all 0.25s ease
	background-color #FFF
	display inline-block
	border-radius(35px)
	position absolute
	height 20px
	width 20px
	left 2px
	top 2px
	
.gfw .toggle-label
	display inline-block
	padding-right 6px
	vertical-align top
	padding-top 6px
	font-size	12px
	
.gfw .mill-table-container .parent td:first-child
	cursor pointer
	
.gfw .mill-table-container .parent.open .toggle-icon
	border-right 4px solid transparent
	border-left 4px solid transparent
	border-top 8px solid mediumGray
	display inline-block
	height 0
	width 0
	top 3px
	
.gfw .mill-table-container .parent .toggle-icon
	border-bottom 4px solid transparent
	border-top 4px solid transparent
	border-left 8px solid mediumGray
	display inline-block
	position relative
	height 0
	left 3px
	top -3px
	width 0
	
.gfw .mill-table-container .info-icon
	background url('images/info-icon-gray.png') no-repeat center
	display inline-block
	cursor pointer
	height 21px
	width 20px


/* 20141217 CRB - Added info icon to Total Calculated Area in report header */
.gfw .report-header .total-area .info-icon
	background url("images/info-icon-gray.png") no-repeat center
	display inline-block
	cursor pointer
	height 21px
	width 20px
