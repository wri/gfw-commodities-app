.gfw .total-area-info-popup .total-area-info-popup-title
	margin 0px
	padding 0px
.gfw .total-area-info-popup .total-area-info-popup-title .total-area-info-popup-label
	margin-top 8px
	margin-left 10px
	display: inline-block;
	font-weight bold
	font-size 14px
.gfw .total-area-info-popup .close-info-icon
	background url("images/close_symbol.png") no-repeat 5px center
	border-left 1px solid #b2b2b2
	background-size 14px 14px
	cursor pointer
	float right
	height 30px
	width 25px
	margin 0px
	padding 0px
.gfw .total-area-info-popup .total-area-info-content
	clear both
	padding 10px
	border-top 1px solid #b2b2b2
	
.csv-download
	background url("images/download-icon.svg") no-repeat center
	box-sizing border-box
	background-size 16px
	position absolute
	height 24px
	width 24px
	right 0px
	top 12px
	
#suitability-table-csv
	top 0

.csv-download:hover
	background-color rgba(102,136,170, 0.25)
	border 1px solid #68A
	border-radius(5px)
